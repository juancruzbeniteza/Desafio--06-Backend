<section
    class="w-50 mb-4 d-flex flex-column justify-content-start align-items-center"
    style="min-width: 380px;"
  >
    <h2 class="mt-5 mb-2 text-center">Create</h2>
    <form
      style="max-width: 360px;"
      class="w-100 d-flex flex-column justify-content-center items-align-center"
    >
      <fieldset class="mb-3 text-center">
        <label for="name" class="form-label mb-0">Name</label>
        <input type="text" class="form-control" id="name" />
      </fieldset>
      <fieldset class="mb-3 text-center">
        <label for="photo" class="form-label mb-0">Photo</label>
        <input type="text" class="form-control" id="photo" />
      </fieldset>
      <fieldset class="mb-3 text-center">
        <label for="email" class="form-label mb-0">Email</label>
        <input type="email" class="form-control" id="email" />
      </fieldset>
      <fieldset class="mb-3 text-center">
        <label for="password" class="form-label mb-0">Password</label>
        <input type="password" class="form-control" id="password" />
      </fieldset>
      
      <button
        id="register"
        type="button"
        class="w-100 btn btn-danger"
      >CREATE!</button>
    </form>

    <button id="google-register-button">Register with Google</button>
  </section>

<script src="/register.js"></script>
  