<section class="w-50 mb-4 d-flex flex-column justify-content-start align-items-center" style="min-width: 380px;">
  <h2 class="mt-5 mb-2 text-center">Crear nuevo Producto</h2>
  <form style="max-width: 360px;" class="w-100 d-flex flex-column justify-content-center items-align-center">
    <fieldset class="mb-3 text-center">
      <label for="title" class="form-label mb-0">Titulo</label>
      <input type="text" class="form-control" id="title" />
    </fieldset>
    <fieldset class="mb-3 text-center">
      <label for="photo" class="form-label mb-0">Foto</label>
      <input type="text" class="form-control" id="photo" />
    </fieldset>
    <fieldset class="mb-3 text-center">
      <label for="price" class="form-label mb-0">Precio</label>
      <input type="number" class="form-control" id="price" />
    </fieldset>
    <fieldset class="mb-3 text-center">
      <label for="stock" class="form-label mb-0">Stock</label>
      <input type="number" class="form-control" id="stock" />
    </fieldset>
    
    <button id="newProduct" type="button" class="w-100 btn btn-danger">Crear</button>
  </form>
</section>

<script src="/socket.io/socket.io.js"></script>
<script src="/form.js"></script>
