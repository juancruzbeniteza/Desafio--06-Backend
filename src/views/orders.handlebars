<main class="flex-grow-1 w-100 d-flex flex-column">
    <h1 class="text-center pt-5 pb-3">Pedidos</h1>
    {{#if message}}
    <h1 class="text-center">{{message}}</h1>
    {{else}}
    <article class="d-flex flex-wrap justify-content-center" id="products">
            {{#each orders}}
                <div class=" w-100 d-flex justify-content-around align-items-center">
                    <img src={{this.pid.photo}} style="height: 240px" class="" alt="{{each.title}}">
                    <h5 class="">{{this.pid.title}}</h5>
                    <h4>{{this.quantity}}</h4>
                    <h4>${{this.pid.price}}</h4>
                    <span
            class="d-flex justify-content-center align-items-center m-0 p-2"
            style="width: 60px;"
          >
            <img
              class="deleteButton"
              id={{this._id}}
              src="data:image/png;base64,"
            />
          </span>
                </div>
            {{/each}}
        </article>
    </section>
    
    <span class="w-100 d-flex justify-content-center">
        {{#if prev}}
        <a
            class="btn btn-primary fs-5 m-4 mt-0"
            href="/orders?title={{filter}}&page={{prev}}"
        >PREV</a>
        {{/if}}
        {{#if next}}
        <a
            class="btn btn-primary fs-5 m-4 mt-0"
            href="/orders?title={{filter}}&page={{next}}"
        >NEXT</a>
        {{/if}} 
    </span>
    {{/if}}
</main>
<script src="/orders.js"></script>